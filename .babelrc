{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["babel-plugin-root-import",
      {
        "paths": [
          {
            "rootPathSuffix": "./src",
            "rootPathPrefix": "src/"
          },{
            "rootPathSuffix": "./core_app",
            "rootPathPrefix": "core_app/"
          }
        ]
      }
    ]
  ]
}